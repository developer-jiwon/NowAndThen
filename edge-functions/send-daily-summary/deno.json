{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window", "dom"],
    "strict": true,
    "allowJs": true,
    "checkJs": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}